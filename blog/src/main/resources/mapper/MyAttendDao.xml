<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.blog.dao.MyAttendDao">

    <resultMap id="BaseResultMap" type="com.spring.common.entity.MyAttend">
        <!--@Table my_attend-->
        <id property="attendId" column="attend_id" jdbcType="INTEGER"/>
        <result property="attendUserId" column="attend_user_id" jdbcType="INTEGER"/>
        <result property="fansUserId" column="fans_user_id" jdbcType="INTEGER"/>
        <result property="attendTime" column="attend_time" jdbcType="TIMESTAMP"/>
        <result property="attendState" column="attend_state" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap id="AllResultMap" type="com.spring.common.entity.MyAttend">
        <association property="attendUser" column="attend_user_id" select="getAttendUser"/>
        <association property="fansUser" column="fans_user_id" select="getFansUser"/>
    </resultMap>
    <resultMap id="UserMap" type="com.spring.common.entity.MyUser">
        <id property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userImg" column="user_img" jdbcType="VARCHAR"/>
        <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
        <result property="userAddress" column="user_address" jdbcType="VARCHAR"/>
        <result property="userSex" column="user_sex" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="selectFans" resultMap="AllResultMap">
        select *
        from my_attend
        where attend_state = 1
          and attend_user_id = #{attendUserId}
    </select>

    <select id="selectAttend" resultMap="AllResultMap">
        select *
        from my_attend
        where attend_state = 1
          and fans_user_id = #{fansUserId}
    </select>

    <select id="getAttendUser" resultMap="UserMap">
        select *
        from my_user
        where user_id = #{attend_user_id}
    </select>

    <select id="getFansUser" resultMap="UserMap">
        select *
        from my_user
        where user_id = #{fans_user_id}
    </select>

</mapper>