<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.blog.dao.MyBlogTagDao">

    <resultMap id="BaseResultMap" type="com.spring.common.entity.MyBlogTag">
        <!--@Table my_blog_tag-->
        <id property="blogTagId" column="blog_tag_id" jdbcType="INTEGER"/>
        <result property="blogId" column="blog_id" jdbcType="INTEGER"/>
        <result property="tagId" column="tag_id" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap id="AllResultMap" type="com.spring.common.entity.MyBlogTag" extends="BaseResultMap">
        <association property="myTag">
            <id property="tagId" column="tag_id" jdbcType="INTEGER"/>
            <result property="tagName" column="tag_name" jdbcType="VARCHAR"/>
        </association>
    </resultMap>

    <select id="selectByBlogId" resultMap="AllResultMap" parameterType="integer">
        select *
        from my_blog_tag mbt
                 left join my_tag mt on mbt.tag_id = mt.tag_id
        where mbt.blog_id = #{blog_id}
    </select>
</mapper>