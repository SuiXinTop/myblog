<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.myblog.dao.MyUserDao">

    <resultMap id="BaseResultMap" type="com.spring.myblog.entity.MyUser">
        <!--@Table my_user-->
        <id property="userId" column="user_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userPassword" column="user_password" jdbcType="VARCHAR"/>
        <result property="userImg" column="user_img" jdbcType="VARCHAR"/>
        <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
        <result property="userAddress" column="user_address" jdbcType="VARCHAR"/>
        <result property="userSex" column="user_sex" jdbcType="VARCHAR"/>
        <result property="userState" column="user_state" jdbcType="INTEGER"/>
        <result property="loginIp" column="login_ip" jdbcType="VARCHAR"/>
        <result property="loginTime" column="login_time" jdbcType="TIMESTAMP"/>
        <result property="registerTime" column="register_time" jdbcType="TIMESTAMP"/>
        <result property="roleId" column="role_id" jdbcType="INTEGER"/>
    </resultMap>
    <resultMap id="UserRoleMap" type="com.spring.myblog.entity.MyUser" extends="BaseResultMap">
        <association property="myRole">
            <id property="roleId" column="role_id" jdbcType="INTEGER"/>
            <result property="roleKey" column="role_key" jdbcType="VARCHAR"/>
            <result property="roleName" column="role_name" jdbcType="VARCHAR"/>
        </association>
    </resultMap>

    <select id="selectUserRole" resultMap="UserRoleMap"
            parameterType="com.spring.myblog.entity.MyUser">
        select mu.*,mr.*
        from my_user mu left join my_role mr
        on mu.role_id = mr.role_id
        where 1=0
        <if test="userEmail!=null and userEmail!=''">
            or user_email = #{userEmail}
        </if>
        <if test="userId!=null and userId!=''">
            or user_id = #{userId}
        </if>
    </select>

</mapper>